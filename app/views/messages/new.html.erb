<div class="row" id="section">
    <div class="col-lg-offset-3 col-lg-6 col-md-offset-3 col-md-6  col-sm-offset-3 col-sm-6 col-xs-offset-1 col-xs-10">
        <h3 class="margin-bottom">Fomulaire de contact</h3>
          <%= flash[:success] %>
        <%= form_for @message do |f| %>
          <div class="form-group">
            <h4><label>Votre nom complet</label></h4>
            <%= f.text_field :name, class: "form-control", placeholder:"Dimitri Payet" %>
          </div>
          <div class="form-group">
            <h4><label>Votre adresse email</label></h4>
            <%= f.text_field :email,  class: "form-control", placeholder:"dimitri@gmail.com" %>
          </div>

          <div class="form-group">
            <h4><label>Message</label></h4>
            <%= f.text_area :message, rows: 5, class: "form-control" %>
          </div>
          <%= f.submit 'Envoyer', class: 'btn btn-default btn-primary btn-lg' %>
        <% end %>

  </div>
</div>
